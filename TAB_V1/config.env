# TAB V1 Configuration (non-sensitive settings)
PROJECT_NAME=TAB_V1
VERSION=1.0.0
ENVIRONMENT=development

# API Configuration
TAB_HOST=0.0.0.0
TAB_PORT=8001
TAB_DEBUG=true

# Application Settings
MAX_SESSIONS=100
SESSION_TIMEOUT=3600
WIZARD_STEPS_MAX=20

# File Paths
CONFIG_TEMPLATES_DIR=./templates
LOGS_DIR=./logs

# Load secrets from secure location
SECRETS_FILE=/etc/TA_V8/TAB_V1/secrets.env
SHARED_SECRETS_FILE=/etc/TA_V8/shared/secrets.env

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json