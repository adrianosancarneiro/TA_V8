# TAE V1 Configuration (non-sensitive settings)
PROJECT_NAME=TAE_V1
VERSION=1.0.0
ENVIRONMENT=development

# API Configuration
TAE_HOST=0.0.0.0
TAE_PORT=8002
TAE_DEBUG=true

# Execution Configuration
MAX_CONCURRENT_TASKS=10
TASK_TIMEOUT=300
RETRY_ATTEMPTS=3
WORKER_POOL_SIZE=5

# File Paths
TEMP_DIR=./temp
LOGS_DIR=./logs

# Load secrets from secure location
SECRETS_FILE=/etc/TA_V8/TAE_V1/secrets.env
SHARED_SECRETS_FILE=/etc/TA_V8/shared/secrets.env

# Docker Configuration
DOCKER_HOST=unix:///var/run/docker.sock
DOCKER_TIMEOUT=60

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json