# TAO V1 Configuration (non-sensitive settings)
PROJECT_NAME=TAO_V1
VERSION=1.0.0
ENVIRONMENT=development

# API Configuration
TAO_HOST=0.0.0.0
TAO_PORT=8003
TAO_DEBUG=true

# Orchestration Configuration
MAX_WORKFLOWS=50
MAX_AGENTS_PER_WORKFLOW=20
WORKFLOW_TIMEOUT=7200
HEARTBEAT_INTERVAL=30

# File Paths
WORKFLOWS_DIR=./workflows
LOGS_DIR=./logs

# Load secrets from secure location
SECRETS_FILE=/etc/TA_V8/TAO_V1/secrets.env
SHARED_SECRETS_FILE=/etc/TA_V8/shared/secrets.env

# Service Discovery
TAB_SERVICE_URL=http://localhost:8001
TAE_SERVICE_URL=http://localhost:8002

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json