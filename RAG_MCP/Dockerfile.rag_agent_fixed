FROM python:3.11-slim

# Install system dependencies
RUN apt-get update && apt-get install -y \
    gcc \
    g++ \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Set working directory
WORKDIR /app

# Install Python dependencies
RUN pip install --no-cache-dir \
    uvicorn[standard] \
    fastapi \
    pydantic \
    httpx \
    asyncpg \
    psycopg2-binary \
    aiohttp \
    numpy \
    scikit-learn \
    langchain \
    langchain-community \
    asyncio \
    typing-extensions \
    prometheus-client \
    python-multipart \
    python-jose[cryptography] \
    passlib[bcrypt] \
    qdrant-client

# Copy application code
COPY agents/ /app/agents/
COPY shared/ /app/shared/
COPY mcp_services/ /app/mcp_services/
COPY *.py /app/

# Create necessary directories
RUN mkdir -p /app/logs /app/temp

# Ensure Python can find the modules
RUN touch /app/__init__.py && \
    touch /app/shared/__init__.py && \
    touch /app/agents/__init__.py && \
    touch /app/agents/coordinator/__init__.py && \
    touch /app/mcp_services/__init__.py

# Set environment variables
ENV PYTHONPATH=/app
ENV PYTHONUNBUFFERED=1

# Expose port
EXPOSE 8000

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=30s --retries=3 \
    CMD curl -f http://localhost:8000/health || exit 1

# Run the application
CMD ["uvicorn", "agents.coordinator.server:app", "--host", "0.0.0.0", "--port", "8000"]
